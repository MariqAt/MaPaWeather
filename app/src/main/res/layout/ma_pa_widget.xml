<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_shape"
    android:id="@+id/widget_layout"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/image_view_widget"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/clear_night_icon"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/location_widget"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="City"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_widget" />

    <TextView
        android:id="@+id/condition_widget"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Condition"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingStart="8dp"
        android:layout_below="@+id/location_widget"
        android:layout_toEndOf="@+id/image_view_widget" />

    <TextView
        android:id="@+id/degree_widget"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="2.5"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingStart="6dp"
        android:paddingTop="8dp"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/location_widget" />

    <TextView
        android:id="@+id/min_max_degree_widget"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Min/Min"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/condition_widget"
        android:layout_alignBottom="@+id/condition_widget"
        android:layout_toEndOf="@+id/location_widget" />



</RelativeLayout>