<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_now_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/fragment_1_degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_1_condition"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="32C"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/fragment_1_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_1_pressure"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="description"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/fragment_1_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_1_description"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="condition"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/fragment_1_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_1_humidity"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="pressure"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/fragment_1_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wind_linear_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="humidity"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/wind_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_1_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="wind speed"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/fragment_1_wind_direction"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_arrow_upward_black_24dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/condition_image_now"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/fragment_1_degrees"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

</RelativeLayout>