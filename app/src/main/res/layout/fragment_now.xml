<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
             android:orientation="vertical"
             android:padding="16dp">

    <TextView
        android:id="@+id/fragment_1_degrees"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="32sp"
        android:text="32C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp"/>

    <TextView
        android:id="@+id/fragment_1_condition"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"/>

    <TextView
        android:id="@+id/fragment_1_pressure"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"/>

    <TextView
        android:id="@+id/fragment_1_humidity"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/fragment_1_wind_speed"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="wind speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"/>

    <TextView
        android:id="@+id/fragment_1_wind_direction"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="wind direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_menu_gallery"/>

</RelativeLayout>